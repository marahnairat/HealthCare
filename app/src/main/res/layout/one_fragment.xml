            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:onClick="onCheckboxClicked"
            android:layout_marginLeft="20dp"
            />


        android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/checkbox7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:onClick="onCheckboxClicked"
            android:layout_marginLeft="20dp"
            />

        <Button
            android:id="@+id/buttonchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ok"

            />

    </LinearLayout>