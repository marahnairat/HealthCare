<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.healthcare.TwoFragmentsActivity"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <fragment
            android:id="@+id/three_fragment"
            android:name="com.example.healthcare.ThreeFragment"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="33dp"
            tools:layout="@layout/three_fragment"

            />

        <fragment
            android:id="@+id/one_fragment"
            android:name="com.example.healthcare.OneFragment"
            android:layout_width="100dp"
            android:layout_height="300dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="30dp"
            tools:layout="@layout/one_fragment" />
    </LinearLayout>

    <fragment
        android:id="@+id/two_fragment"
        android:name="com.example.healthcare.TwoFragment"
        android:layout_width="370dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        tools:layout="@layout/two_fragment" />

</LinearLayout>
