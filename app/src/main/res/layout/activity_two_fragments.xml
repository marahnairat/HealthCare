<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.healthcare.TwoFragmentsActivity"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/textView12"
        android:layout_width="399dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="0dp"

        android:text="Symptoms Diagnosed"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <fragment
            android:id="@+id/three_fragment"
            android:name="com.example.healthcare.ThreeFragment"
            android:layout_width="wrap_content"
            android:layout_height="433dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            tools:layout="@layout/three_fragment"

            />

        <fragment
            android:id="@+id/one_fragment"
            android:name="com.example.healthcare.OneFragment"
            android:layout_width="155dp"
            android:layout_height="427dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            tools:layout="@layout/one_fragment" />
    </LinearLayout>

    <fragment
        android:id="@+id/two_fragment"
        android:name="com.example.healthcare.TwoFragment"
        android:layout_width="wrap_content"
        android:layout_height="158dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="100dp"
        tools:layout="@layout/two_fragment" />

</LinearLayout>
