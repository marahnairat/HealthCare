
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="400dp"
    android:layout_marginTop="100dp"
    android:textAlignment="center"
    android:background="@color/colorWhite"

    >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Determine which part of the body you are experiencing pain "

            android:fontFamily="sans-serif-light"

            android:textAlignment="center"
            android:textColor="#656262"
            android:textSize="13sp"

            android:layout_margin="15dp"
            />

<Button
            android:id="@+id/chestandback"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Chest and Back"
            android:layout_marginLeft="30dp"

    />

        <Button
            android:id="@+id/headandneck"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Head and Neck"
            android:layout_marginLeft="30dp"/>

        <Button
            android:id="@+id/abdomenandpelvis"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Abdomen and Pelvis"
            android:layout_marginLeft="30dp"
            />

        <Button
            android:id="@+id/noseearthroat"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Nose ear throat"
            android:layout_marginLeft="30dp"
            />

        <Button
            android:id="@+id/skin"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Skin"
            android:layout_marginLeft="30dp"
            />

        <Button
            android:id="@+id/bonesandjoints"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Bones and joints"
            android:layout_marginLeft="30dp"
            />

        <Button
            android:id="@+id/elsee"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Else"
            android:layout_marginLeft="30dp"
            />




</LinearLayout>